.dCreateAlbumPopup {padding:15px 50px 20px 20px;width:320px;}
.dCreateAlbumPopup input{
    border:3px solid #deded0;font:Normal 12px Verdana;color:#3e3e3e;padding:3px;margin:3px 0px 0px 0px;
}
.dCreateAlbumPopup input.iNewAlbumName {width: 310px;}
.dCreateAlbumPopup input.iNewAlbumDescription {width: 310px; height: 30px;}
.dCreateAlbumPopup .blue_button{
    cursor: pointer;
    background:#59a5d1;
    font:12px verdana,sans-serif;
    color:#fff ;
    border:1px solid #408bb6;
    padding:2px 10px;
    margin-top: 10px;
}
.dCreateAlbumPopup h3{margin:5px 0px 0px 0px;}
div.dCreateAlbumPopup input.iCreateAlbumBtn{display:block;width:100px;float: right;}

.dCreateAlbumPopup .grey_button {
background:none repeat scroll 0 0 #F2F2EE;
border:1px solid #DEDED0;
color:#969696 !important;
cursor:default;
font:12px verdana,sans-serif;
padding:2px 10px;
}

.dEditAlbumAdPopup {padding:15px 50px 20px 20px;width:320px;}